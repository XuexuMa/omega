[flake8]
max-line-length = 88
ignore = E501, E203, W503
per-file-ignores = 
    __init__.py:F401
    docs/conf.py:E402
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .tox
    .mypy_cache
    .pytest_cache
    .vscode
    .github
    poetry/utils/_compat.py
    poetry/utils/env_scripts/tags.py
    tests/fixtures/
    tests/repositories/fixtures/
    tests/utils/fixtures/
    .eggs
# available styles are pep257, google, numpy
docstring-convention = google